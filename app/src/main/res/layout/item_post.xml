<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_normal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miercoles 20 de Febrero"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_normal_text"
                app:fontFamily="@font/ubuntu" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:text="La Dorada - IbaguÃ©"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_normal_text"
                    android:textStyle="bold"
                    app:fontFamily="@font/ubuntu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_price"
                    android:text="$25.000"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_normal_text"
                    app:fontFamily="@font/ubuntu" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:30 pm"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_normal_text"
                app:fontFamily="@font/ubuntu" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gustavo Forero"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_normal_text"
                    app:fontFamily="@font/ubuntu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="3013588304"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_normal_text"
                    app:fontFamily="@font/ubuntu" />


            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:contentDescription="TODO"
        android:elevation="10dp"
        android:src="@drawable/drawable_circle" />

</RelativeLayout>